.logo-container
  a.logo(href='/')
    | pixelnuke
  .visible-xs.toggle-sidebar-left
    i.fa.fa-bars(aria-label='Toggle sidebar')

.header-right
  
  .separator
    
  #userbox.userbox(dropdown, is-open='status.isopen')
    a(href='#', dropdown-toggle)
      figure.profile-picture
        img.img-circle(src=require('../../public/images/yeoman.png'), alt='profile pic')
      .profile-info
        span.name Myles Collin Hiatt
        span.role Boss
      
      i.fa.custom-caret
    
    .dropdown-menu(role='menu')
      ul.list-unstyled
        li.divider
        li
          a(role='menuitem', tabindex='-1', href='')
            i.fa.fa-user
            | &nbsp;My Profile
        li
          a(role='menuitem', tabindex='-1', href='')
            i.fa.fa-lock
            | &nbsp;Lock Screen
        li
          a(role='menuitem', tabindex='-1', href='')
            i.fa.fa-power-off
            | &nbsp;Logout
            
            
